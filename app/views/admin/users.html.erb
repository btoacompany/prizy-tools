<div id="wrapper">
<div id="contents">
<div class="toolbox">
  <%= form_tag({:controller => 'admin', :action => 'users'}, remote: true, :class => "form_center") do%>
    <select name="company_id">
      <% @company_lists.each do |c| %>
        <option value=<%= c.id %>>
          <%= c.name%>
        </option>
      <% end %>
    </select>
    <input type="submit" value="送信">
  <% end %>
  <table class="tbl_tools" border="1">

  <tr>
    <th>会社名</th>
    <th>名前</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
    <th>取得ポイント</th>
    <th>ポイント</th>
  </tr>
  <% @users.each do | item | %>
    <tr class="item_<%= item[:id] %> company_<%= item.company.id %> reborn">
      <td><%= item.company.name %></td>
      <td><%= "#{item[:lastname]} #{item[:firstname]}" %></td>
      <td><%= item[:email] %></td>
      <td align="center">
        <% if item[:verified] == 0 %>保留 
        <% else %>登録済 
        <% end %>
      </td>
      <td><%= item[:in_points] %></td>
      <td><%= item[:out_points] %></td>
      </td>
    </tr>
  <% end %>
  </table><br>
    <p align="center"><%= link_to "戻る", "/", :class => "btn btn_back", :style => "width:200px;height:50px" %></p>
  <br>
</div>
</div> <!-- contents -->
</div> <!-- wrapper -->
